{
  "name": "main",
  "private": true,
  "type": "module",
  "main": "dist/main.cjs",
  "scripts": {
    "build": "tsup src/main.ts --format cjs --sourcemap --out-dir dist",
    "watch": "tsup src/main.ts --format cjs --sourcemap --out-dir dist --watch",
    "dev": "concurrently -k \"pnpm:watch\" \"pnpm:dev:electron\"",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "publish": "electron-builder"
  },
  "dependencies": {
    "electron": "^31.3.1",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "electron-builder": "^24.13.3",
    "tsup": "^8.2.4",
    "typescript": "^5.6.2"
  }
}